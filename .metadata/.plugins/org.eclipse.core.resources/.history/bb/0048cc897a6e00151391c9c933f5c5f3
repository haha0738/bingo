package com.dermot.bingo;

import java.io.BufferedReader;
import java.io.InputStreamReader;
import java.util.ArrayList;
import java.util.InputMismatchException;
import java.util.List;
import java.util.Scanner;

public class Game {
	private List<Integer> _inputs = new ArrayList<>();
	private List<Player> _players = new ArrayList<>();
	
	public void start()
	{
		_players.clear();
		BufferedReader buf = new BufferedReader(new InputStreamReader(System.in)); 
		int playerCount;
		System.out.println("請輸入玩家數量");
		while(true)
		{
			try 
			{
				playerCount = buf.readLine()
				if (playerCount < 2) 
					throw new InputMismatchException();
				break;
			} 
			catch (InputMismatchException e) 
			{
				System.out.println("玩家數量必須為正整數並且大於兩人，請重新輸入");
			}
		}
		
		
		for (int i = 0; i < playerCount; i++) 
		{
			String name = "";
			System.out.println("請輸入玩家 " + i + " 的暱稱");
			try 
			{
				name = scanner.next();
				if (name.length() <= 0) 
					throw new InputMismatchException();
				break;
			} 
			catch (InputMismatchException e) 
			{
				System.out.println("請正確輸入玩家暱稱");
			}
			Player player = new Player(this, name);
			_players.add(player);
		}
	}
}
