package com.dermot.bingo;

public class Player {
	private Matrix _matrix;
	private Game _game;
	private String _name;
	private int _links;
	Player(Game game, String name)
	{
		_name = name;
		_game = game;
		_matrix = new Matrix(this);
	}
	
	public Game getGame()
	{
		return _game;
	}
	
	public Matrix getMatrix()
	{
		return _matrix;
	}
	
	public String getName() 
	{
		return _name;
	}
	
	public boolean isWin() 
	{
		if (_links >= 5) 
			return true;
		
		_links = _matrix.check(_game.getPatterns(), _game.getInputs());
		return _links >= 5;
	}
	
	public int getLinks()
	{
		return _links;
	}
}
